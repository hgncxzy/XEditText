<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:keyboard="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40_5"
            android:layout_marginTop="@dimen/dp_33_5"
            android:layout_marginEnd="@dimen/dp_40_5"
            android:background="#ffffff">

            <com.xzy.keyboard.KeyboardEditText
                android:id="@+id/et_input1"
                android:layout_width="@dimen/dp_278_5"
                android:layout_height="@dimen/dp_33_5"
                android:background="@drawable/edittext_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center|left"
                android:hint="input"
                android:letterSpacing="0.1"
                android:maxLength="30"
                android:paddingStart="@dimen/dp_13"
                android:paddingEnd="@dimen/dp_33"
                android:singleLine="true"
                android:textColor="#4A4A4A"
                android:textColorHint="#CCCCCC"
                android:textCursorDrawable="@drawable/text_cursor_drawable"
                android:textSize="@dimen/dp_12"
                keyboard:inputType="qwerty"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/dp_13_5"
                android:layout_height="@dimen/dp_13_5"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@mipmap/ic_delete"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
